/**
 * Implements hook_schema().
 */
function social_share_schema() {
  $schema = array();

  $schema['social_share_networks'] = array(
    'fields' => array(
      'machine_name' => array(
        'type'     => 'varchar',
        'length'   => 255,
      ),
      'human_name' => array(
        'type'     => 'varchar',
        'length'   => 255,
      ),
      'url' => array(
        'type'     => 'blob',
      ),
      'weight' => array(
        'type'     => 'int',
        'length'   => 4,
        'unsigned' => FALSE,
        'not null' => TRUE,
        'default'  => 0,
      ),
      'locked' => array(
        'type'     => 'int',
        'length'   => 1,
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default'  => 0,
      ),
    ),
    'primary key' => array('machine_name'),
  );

  return $schema;
}

